<div class="file-select-control">
	<ul class="nav nav-tabs" role="tablist">
		<li class="active"><a href="#download" role="tab" data-toggle="tab"><h4>Browse</h4></a></li>
		<li><a href="#upload" role="tab" data-toggle="tab"><h4>Upload</h4></a></li>
	</ul>

	<div class="tab-content">
		<div role="tabpanel" class="tab-pane active" id="download">
			<form class="form-inline">

				<div class="file-selector"></div>

				<div class="buttons pull-right">
					<input id="file-url"
						class="form-control pull-left"
						size="60"
						type="text"
						value="{{original}}"
						placeholder=""/>
				</div>
				
				<div class="clearfix"></div>

				<div class="links">
					<a href="#" class="download">Download JSON</a> 
					|
					<a href="#" class="clipboard">Copy to clipboard</a>
				</div>
			</form>
		</div>

		<div role="tabpanel" class="tab-pane" id="upload">
			{{> filebrowser/upload}}
		</div>
	</div>
</div>
