<div class="growl notification nt-type-{{type}}">
	<div class="nt-content">
		<div class="glyph">
			{{#if fromUser.username}}
				{{#if fromUser.gravatar}}
					<div style="background-image: url('{{fromUser.gravatar}}');" class="image-crop"></div>
				{{else}}
					<div style="background-color: {{fromUser.color}};" class="image-crop"><span>{{fromUser.firstLetter}}</span></div>
				{{/if}}
			{{else}}
				<svg class="icon-{{type}}"><use xlink:href="#icon-{{type}}"></use></svg>
			{{/if}}
		</div>
		<div class="text"><span>{{message}}</span></div>
	</div>
</div>