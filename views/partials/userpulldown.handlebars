{{#if user.username }}

<button class="nofx smalltext" id="btn-account-top">
	<span class="top-userpic">
		<img class="gravatar-in-form" src="{{user.gravatar}}" id="top-userpic" />
	</span>
	<span id="userpulldownUsername">{{user.username}}</span>
</button>

<ul class="dropdown dropdown-menu" role="menu" id="userPullDown">
    <li id="dropdownMyFilesLi">
		<a href="/{{user.username}}">My Files</a>
	</li>
	<li>
		<a class="account" href="/account">Account Details</a>
	</li>
	<li>
		<a href="/logout">Sign out</a>
	</li>
</ul>

{{else}}

<button class="btn svg action login" id="btn-sign-in" data-action="login">
	<svg class="icon-sign-in"><use xlink:href="#icon-sign-in"></use></svg>
	<span>Sign in</span>
</button>

{{/if}}
